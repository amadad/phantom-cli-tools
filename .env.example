# Phantom Loom Configuration
# Copy to .env and fill in your values

# =============================================================================
# API AUTHENTICATION (for Workers endpoints)
# =============================================================================
# Generate with: openssl rand -base64 32 | tr -d '/+=' | head -c 32
API_KEY=your_api_key_here
ADMIN_KEY=your_admin_key_here

# For web app (Vite) - same as API_KEY above
VITE_API_KEY=your_api_key_here
VITE_API_URL=http://localhost:8787

# =============================================================================
# Required: Google Gemini API Key
# =============================================================================
# Get your API key at https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Option A: Composio (text-only posts)
# Get your API key at https://app.composio.dev
COMPOSIO_API_KEY=your_composio_api_key_here
COMPOSIO_USER_ID=default

# Option B: Direct Twitter API (text + image posts)
# Create app at https://developer.twitter.com
# Shared app credentials (one app for all brands)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Per-brand OAuth 1.0a tokens
# SCTY brand (@SCTYinc)
TWITTER_SCTY_ACCESS_TOKEN=your_scty_access_token
TWITTER_SCTY_ACCESS_SECRET=your_scty_access_secret

# GiveCare brand (@givecareapp)
TWITTER_GIVECARE_ACCESS_TOKEN=your_givecare_access_token
TWITTER_GIVECARE_ACCESS_SECRET=your_givecare_access_secret

# Optional: Default brand (defaults to givecare)
BRAND=givecare

# Optional: Auto-approve content (skip review stage)
AUTO_APPROVE=false

# Optional: RSS feed URL for monitoring
RSS_FEED_URL=https://your-blog.com/feed

# =============================================================================
# CLOUDFLARE R2: Image Storage
# =============================================================================
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=phantom-loom
R2_PUBLIC_URL=https://pub-xxx.r2.dev
