{
  "color": {
    "background": { "$value": "#FFFFFF", "$type": "color" },
    "primary":    { "$value": "#0F0F0F", "$type": "color" },
    "accent":     { "$value": "#6366F1", "$type": "color" },
    "secondary":  { "$value": "#374151", "$type": "color" }
  },
  "typography": {
    "headline": {
      "font":            { "$value": "Inter",      "$type": "fontFamily" },
      "weight":          { "$value": 600,           "$type": "fontWeight" },
      "scaleFactorLarge":  { "$value": 0.04,        "$type": "number" },
      "scaleFactorMedium": { "$value": 0.032,       "$type": "number" },
      "scaleFactorSmall":  { "$value": 0.025,       "$type": "number" }
    }
  },
  "logo": {
    "colorOnLight": { "$value": "#0F0F0F", "$type": "color" },
    "colorOnDark":  { "$value": "#FFFFFF", "$type": "color" }
  }
}
